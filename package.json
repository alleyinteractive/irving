{
  "name": "irving",
  "//": "Root irving package should never be published",
  "private": true,
  "description": "Irving is a ReactJS based, isomorphically rendered, headless CMS frontend application.",
  "homepage": "https://github.com/alleyinteractive/irving#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:alleyinteractive/irving.git"
  },
  "license": "MIT",
  "author": "Alley (Alley.co)",
  "main": "main.js",
  "scripts": {
    "build": "BABEL_ENV=app lerna run build",
    "preinstall": "npx check-node-version --package",
    "prerelease": "lerna publish --conventional-prerelease",
    "release": "lerna publish --conventional-release",
    "//": "nohoist option is used to prevent internal packages from being hoisted/deleted by lerna (which is a bug, I think)",
    "bootstrap": "lerna bootstrap --hoist --nohoist=@irvingjs/*",
    "link": "lerna exec --parallel -- npm link",
    "test": "BABEL_ENV=test lerna run test --parallel",
    "test:watch": "BABEL_ENV=test lerna run test:watch --parallel"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-universal-import": "^4.0.0",
    "basic-auth": "^2.0.0",
    "check-node-version": "^3.2.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^2.0.1",
    "core-js": "^3.2.1",
    "critical-style-loader": "^1.1.0",
    "css-loader": "^3.0.0",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "ejs": "^2.5.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jasmine": "^4.1.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "express": "^4.16.3",
    "fetch-mock": "^7.3.0",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "lodash": "^4.17.14",
    "nodemon": "^1.17.5",
    "prop-types": "^15.7.2",
    "query-string": "^6.1.0",
    "react": "^16.12.0",
    "react-dev-utils": "^5.0.2",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.15",
    "react-oembed-container": "^0.3.0",
    "react-redux": "^7.1.1",
    "react-transition-group": "^4.0.0",
    "react-universal-component": "^4.0.1",
    "reduce-reducers": "^0.3.0",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.7",
    "redux-persist": "^5.10.0",
    "redux-saga": "^1.1.1",
    "regenerator-runtime": "^0.13.3",
    "reselect": "^3.0.1",
