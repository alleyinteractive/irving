{
  "name": "irving",
  "//": "Root irving package should never be published",
  "private": true,
  "description": "Irving is a ReactJS based, isomorphically rendered, headless CMS frontend application.",
  "homepage": "https://github.com/alleyinteractive/irving#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:alleyinteractive/irving.git"
  },
  "license": "MIT",
  "author": "Alley (Alley.co)",
  "main": "main.js",
  "scripts": {
    "build": "BABEL_ENV=app lerna run build",
    "preinstall": "npx check-node-version --package",
    "prerelease:canary": "lerna publish --conventional-commits --conventional-prerelease --no-changelog --preid alpha --dist-tag canary",
    "prerelease:beta": "dotenv -- lerna publish --conventional-commits --conventional-prerelease --create-release github --preid beta --dist-tag beta",
    "prerelease:rc": "dotenv -- lerna publish --force-publish --conventional-commits --conventional-prerelease --create-release github --preid rc --dist-tag rc",
    "release": "dotenv -- lerna publish --conventional-commits --conventional-graduate --create-release github",
    "//": "nohoist option is used to prevent internal packages from being hoisted/deleted by lerna (which is a bug, I think)",
    "bootstrap": "lerna bootstrap --hoist --nohoist=@irvingjs/*",
    "link": "lerna exec --parallel -- npm link",
    "test": "BABEL_ENV=test lerna run test --parallel",
    "test:watch": "BABEL_ENV=test lerna run test:watch --parallel"
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^4.0.0",
    "lodash": "^4.17.14",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.15",
    "url-parse": "^1.4.7",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "babel-jest": "^25.1.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv-cli": "^3.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "jest-environment-enzyme": "^7.1.1",
    "jest-enzyme": "^7.1.1",
    "lerna": "^3.20.2"
  },
  "optionalDependencies": {
    "ioredis": "^4.14.1",
    "newrelic": "^5.13.1"
  },
  "engines": {
    "node": "12",
    "npm": "6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
