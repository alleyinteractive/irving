{
  "packages": [
    "packages/*"
  ],
  "version": "4.0.0-rc.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "graphType": "all"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "release/*"
      ]
    }
  }
}
